{
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx"
  ],
  "moduleNameMapper": {
    "^@odlux/framework$": "<rootDir>/framework/src",
    "^@odlux/(.*)$": "<rootDir>/apps/$1/src"
  },
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "testMatch": [
    "**/*-test.(ts|tsx)"
  ]
}